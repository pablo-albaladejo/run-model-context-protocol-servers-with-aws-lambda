{
  "name": "@demo/shared",
  "version": "1.0.0",
  "description": "Shared utilities for MCP demo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage",
    "dev": "tsc --watch",
    "test": "vitest run",
