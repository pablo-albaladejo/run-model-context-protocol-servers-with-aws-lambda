# MCP Demo Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
STAGE=dev

# Application
APP_NAME=mcp-demo
APP_VERSION=1.0.0

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Region
AWS_REGION=us-east-1

# AWS Account (optional, for local development)
AWS_ACCOUNT_ID=123456789012

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Server
PORT=3001
API_HOST=localhost
API_PROTOCOL=http

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# Table Names
CHAT_TABLE_NAME=mcp-demo-chat-dev
SESSIONS_TABLE_NAME=mcp-demo-sessions-dev
USERS_TABLE_NAME=mcp-demo-users-dev

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# AWS Cognito
USER_POOL_ID=us-east-1_xxxxxxxxx
CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# JWT Configuration
JWT_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_xxxxxxxxx
JWT_AUDIENCE=xxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# MCP SERVERS CONFIGURATION
# =============================================================================

# Weather Alerts MCP Server
WEATHER_ALERTS_URL=http://localhost:3002
WEATHER_ALERTS_API_KEY=your-weather-api-key

# Time Service MCP Server
TIME_SERVICE_URL=http://localhost:3003

# MCP Client Configuration
MCP_CONNECTION_TIMEOUT=30000
MCP_REQUEST_TIMEOUT=10000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# Log Format
LOG_FORMAT=json

# Correlation ID
ENABLE_CORRELATION_ID=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# CloudWatch
CLOUDWATCH_LOG_GROUP=/aws/lambda/mcp-demo-api
CLOUDWATCH_METRICS_NAMESPACE=MCPDemo

# X-Ray Tracing
ENABLE_XRAY=true
XRAY_SERVICE_NAME=mcp-demo-api

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend URLs
FRONTEND_URL=http://localhost:3000
FRONTEND_API_URL=http://localhost:3001
FRONTEND_WS_URL=ws://localhost:3001

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket
WS_ENDPOINT=ws://localhost:3001/ws
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_INTERVAL=5000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true

# Mock Authentication (for local development)
ENABLE_MOCK_AUTH=false
MOCK_USER_ID=mock-user-123
MOCK_USER_ROLE=user

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DYNAMODB_ENDPOINT=http://localhost:8000
TEST_CHAT_TABLE_NAME=mcp-demo-chat-test
TEST_SESSIONS_TABLE_NAME=mcp-demo-sessions-test

# Test Configuration
TEST_TIMEOUT=10000
TEST_RETRIES=3

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# CDK Configuration
CDK_APP=src/index.ts
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1

# Deployment
DEPLOYMENT_BUCKET=mcp-demo-deployment-bucket
DEPLOYMENT_KEY_PREFIX=mcp-demo/

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your-openweather-api-key
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Time API
TIMEZONE_API_KEY=your-timezone-api-key
TIMEZONE_BASE_URL=https://api.timezonedb.com/v2.1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_ADMIN_DASHBOARD=true
ENABLE_REAL_TIME_MESSAGING=true
ENABLE_MCP_INTEGRATION=true
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Lambda Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=512

# Database Connection Pool
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_CHANNEL=#mcp-demo

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Audit Logging
ENABLE_AUDIT_LOGS=true
AUDIT_LOG_RETENTION_DAYS=90

# Data Retention
DATA_RETENTION_DAYS=365
ENABLE_DATA_DELETION=true 